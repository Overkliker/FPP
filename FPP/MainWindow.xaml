<Window x:Class="FPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FPP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="UsersGrid" Height="80" Margin="0, 0, 0, 300"/>
        <ListBox x:Name="UsersList" Height="80" Margin="0, 0, 100, 0" SelectionChanged="UsersList_SelectionChanged"></ListBox>
        
    </Grid>
</Window>
